@model IEnumerable<InventoryManagement.Models.Item>
@{
    ViewData["Title"] = "Manage All Items";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>
                    <i class="fas fa-list text-info me-2"></i>Manage All Items
                </h2>
                <p class="text-muted mb-0">Admin view of all items across all inventories</p>
            </div>
            <div>
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-primary me-2">
                    <i class="fas fa-tachometer-alt me-1"></i>Admin Dashboard
                </a>
                <a asp-controller="Item" asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus me-1"></i>New Item
                </a>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Item</th>
                        <th>Inventory</th>
                        <th>SKU</th>
                        <th>Category</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Name</strong>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <br><small class="text-muted">@item.Description</small>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Inventory", new { id = item.InventoryId })" class="text-decoration-none">
                                    <span class="badge bg-primary">@(item.Inventory?.Name ?? "Unknown")</span>
                                </a>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.SKU))
                                {
                                    <code>@item.SKU</code>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Category))
                                {
                                    <span class="badge bg-secondary">@item.Category</span>
                                }
                            </td>
                            <td>
                                <span class="badge @(item.Quantity > 0 ? "bg-success" : "bg-danger")">
                                    @item.Quantity
                                </span>
                            </td>
                            <td>
                                <strong>@item.Price.ToString("C")</strong>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Edit", "Item", new { id = item.Id })" class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="DeleteItem" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-outline-danger" 
                                                onclick="return confirm('Are you sure you want to delete this item?')"
                                                title="Delete Item">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-list fa-4x text-muted mb-3"></i>
                <h3>No Items Found</h3>
                <p class="text-muted">No items have been created yet.</p>
                <a asp-controller="Item" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Create First Item
                </a>
            </div>
        }
    </div>
</div>