@using System.Linq
@{
    ViewData["Title"] = "Admin Dashboard";
    var stats = Model;
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>Admin Dashboard</h2>
                <p class="text-muted mb-0">Complete system overview and management</p>
            </div>
            <a asp-controller="Inventory" asp-action="Index" class="btn btn-outline-secondary">
                Back to App
            </a>
        </div>

        <div class="row mb-4">
            <div class="col-md-3 col-6 mb-3">
                <div class="card border-primary">
                    <div class="card-body text-center">
                        <h3 class="card-title">@Model.TotalUsers</h3>
                        <p class="card-text">Total Users</p>
                        <a asp-action="UserManagement" class="btn btn-sm btn-primary">Manage</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <h3 class="card-title">@Model.TotalInventories</h3>
                        <p class="card-text">Inventories</p>
                        <a asp-action="AllInventories" class="btn btn-sm btn-success">Manage</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="card border-info">
                    <div class="card-body text-center">
                        <h3 class="card-title">@Model.TotalItems</h3>
                        <p class="card-text">Total Items</p>
                        <a asp-action="AllItems" class="btn btn-sm btn-info">Manage</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-3">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <h3 class="card-title">@Model.AdminUsers</h3>
                        <p class="card-text">Admin Users</p>
                        <a asp-action="UserManagement" class="btn btn-sm btn-warning">View</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Quick Actions</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-grid gap-2">
                                    <a asp-controller="Inventory" asp-action="Create" class="btn btn-outline-success btn-lg">
                                        <i class="fas fa-plus me-2"></i>New Inventory
                                    </a>
                                    <small class="text-muted">Create a new inventory</small>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-grid gap-2">
                                    <a asp-controller="Item" asp-action="Create" class="btn btn-outline-primary btn-lg">
                                        <i class="fas fa-plus me-2"></i>New Item
                                    </a>
                                    <small class="text-muted">Add a new item</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if ((Model.RecentUsers?.Count > 0) || (Model.RecentInventories?.Count > 0) || (Model.RecentItems?.Count > 0))
        {
            <div class="row mt-4">
                @if (Model.RecentUsers?.Count > 0)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Recent Users</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="list-group list-group-flush">
                                    @foreach (var user in Model.RecentUsers)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@user.FullName</strong><br>
                                                <small class="text-muted">@user.Email</small>
                                            </div>
                                            @if (user.IsAdmin)
                                            {
                                                <span class="badge bg-warning">Admin</span>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (Model.RecentInventories?.Count > 0)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Recent Inventories</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="list-group list-group-flush">
                                    @foreach (var inventory in Model.RecentInventories)
                                    {
                                        <div class="list-group-item">
                                            <strong>@inventory.Name</strong><br>
                                            <small class="text-muted">@inventory.Description</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (Model.RecentItems?.Count > 0)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Recent Items</h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="list-group list-group-flush">
                                    @foreach (var item in Model.RecentItems)
                                    {
                                        <div class="list-group-item">
                                            <strong>@item.Name</strong><br>
                                            <small class="text-muted">in @(item.Inventory?.Name ?? "Unknown")</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>