@model Inventory
@{
    ViewData["Title"] = Model?.Id == 0 || Model == null ? "Create New Inventory" : $"Edit {Model.Name}";
    bool isEditMode = Model?.Id != 0 && Model != null;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-@(isEditMode ? "edit" : "plus-circle") me-2"></i>
                        @ViewData["Title"]
                    </h4>
                </div>

                <div class="card-body">
                    <form asp-action="@(isEditMode ? "Edit" : "Create")" method="post">
                        @if (isEditMode)
                        {
                            <input asp-for="Id" type="hidden" />
                            <input asp-for="CreatedAt" type="hidden" />
                        }

                        <!-- Inventory Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="fas fa-warehouse me-1"></i>
                                @Html.DisplayNameFor(model => model.Name)
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Enter inventory name (e.g., Main Warehouse, Office Supplies)" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left me-1"></i>
                                @Html.DisplayNameFor(model => model.Description)
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Describe this inventory (optional)..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">
                                <small>Optional: Provide details about what this inventory contains or its purpose.</small>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>
                                Back to List
                            </a>
                            <button type="submit" class="btn btn-@(isEditMode ? "warning" : "primary")">
                                <i class="fas fa-@(isEditMode ? "save" : "plus") me-1"></i>
                                @(isEditMode ? "Update Inventory" : "Create Inventory")
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @if (isEditMode)
            {
                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Inventory Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Created:</strong> @Model?.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Total Items:</strong> @Model?.TotalItems</p>
                                <p><strong>Total Value:</strong> @Model?.TotalValue.ToString("C")</p>
                            </div>
                        </div>
                        
                        @if (Model?.TotalItems > 0)
                        {
                            <div class="mt-3">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>
                                    View Items in This Inventory
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}