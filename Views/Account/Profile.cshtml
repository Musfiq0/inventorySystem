@model InventoryManagement.Models.ApplicationUser
@{
    ViewData["Title"] = "Profile";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">User Profile</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Personal Information</h5>
                        <p><strong>Full Name:</strong> @Model.FullName</p>
                        <p><strong>First Name:</strong> @Model.FirstName</p>
                        <p><strong>Last Name:</strong> @Model.LastName</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Username:</strong> @Model.UserName</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Account Details</h5>
                        <p><strong>Account Type:</strong> 
                            @if (Model.IsAdmin)
                            {
                                <span class="badge bg-warning text-dark">Administrator</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Standard User</span>
                            }
                        </p>
                        <p><strong>Member Since:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        <p><strong>Email Confirmed:</strong> 
                            @if (Model.EmailConfirmed)
                            {
                                <span class="text-success">Yes</span>
                            }
                            else
                            {
                                <span class="text-warning">No</span>
                            }
                        </p>
                    </div>
                </div>
                
                <hr>
                
                <div class="d-flex justify-content-between">
                    <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
                    <div>
                        @if (Model.IsAdmin)
                        {
                            <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-primary">Admin Dashboard</a>
                        }
                        <a asp-controller="Inventory" asp-action="Index" class="btn btn-success">View Inventories</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>