@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h3 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Access Denied
                </h3>
            </div>
            <div class="card-body text-center p-4">
                <i class="fas fa-ban fa-4x text-danger mb-3"></i>
                <h4 class="text-danger mb-3">You do not have permission to access this page</h4>
                <p class="text-muted mb-4">
                    The page you are trying to access requires special permissions that your account does not have.
                </p>
                <div class="d-flex justify-content-center gap-2">
                    <a asp-controller="Inventory" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-home me-1"></i>Go to Dashboard
                    </a>
                    @if (User.Identity?.IsAuthenticated != true)
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success">
                            <i class="fas fa-sign-in-alt me-1"></i>Sign In
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>